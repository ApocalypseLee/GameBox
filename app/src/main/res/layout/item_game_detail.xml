<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/game_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/game_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/game_item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/game_item_icon"
            android:layout_width="@dimen/item_game_icon_size"
            android:layout_height="@dimen/item_game_icon_size"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/game_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/game_item_icon"
            android:layout_alignRight="@+id/game_item_icon"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-110dp"
            android:layout_marginRight="-110dp"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/game_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/game_item_icon"
            android:layout_alignRight="@+id/game_item_icon"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="-100dp"
            android:layout_marginRight="-100dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/game_item_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/game_item_icon"
            android:layout_alignRight="@+id/game_item_icon"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="-100dp"
            android:layout_marginRight="-100dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/game_item_icon"
            android:layout_alignRight="@+id/game_item_icon"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="-40dp"
            android:layout_marginRight="-40dp"
            android:background="@drawable/like" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/game_item_icon"
            android:layout_alignRight="@+id/game_item_icon"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="-40dp"
            android:layout_marginRight="-40dp"
            android:background="@drawable/power" />


    </RelativeLayout>

</LinearLayout>