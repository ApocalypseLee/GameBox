<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.MyApplication.FullscreenContainer"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/navi_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navi_bg"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/item_game"
            android:layout_width="@dimen/navi_button_width"
            android:layout_height="@dimen/navi_button_height"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_game"
            android:gravity="center_horizontal|center_vertical" />

        <ImageView
            android:id="@+id/item_cash"
            android:layout_width="@dimen/navi_button_width"
            android:layout_height="@dimen/navi_button_height"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/selector_cash"
            android:gravity="center_horizontal|center_vertical" />

        <ImageView
            android:id="@+id/item_prize"
            android:layout_width="@dimen/navi_button_width"
            android:layout_height="@dimen/navi_button_height"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/selector_prize"
            android:gravity="center_horizontal|center_vertical" />

        <ImageView
            android:id="@+id/item_wallet"
            android:layout_width="@dimen/navi_button_width"
            android:layout_height="@dimen/navi_button_height"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/selector_user"
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>
</RelativeLayout>